# Maintainer: Clittle <philm@manjaro.org>
# Contributor: Alexander Monakov <amonakov@gmail.com>

pkgname=lib32-primus
pkgver=20130329
pkgrel=1
pkgdesc="Faster OpenGL offloading for Bumblebee (32-bit library)"
arch=('x86_64')
url="https://github.com/amonakov/primus"
license=('custom:ISC')
depends=('primus' 'lib32-mesa')
makedepends=('git' 'gcc-multilib')
md5sums=()

_gitroot="git://github.com/amonakov/primus.git"
_gitname="primus"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1 $_gitroot $_gitname
    cd $_gitname
  fi
  msg "GIT checkout done or server timeout"

  CXX=g++\ -m32 LIBDIR=lib32 make
}

package() {
  cd "$srcdir/$_gitname"
  install -D "lib32/libGL.so.1" "$pkgdir/usr/lib32/primus/libGL.so.1"

  install -D -m644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
